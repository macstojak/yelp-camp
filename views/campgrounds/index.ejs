<% include ../partials/header %>
<div class="container">
<header class="jumbotron">
    <div class="container">
        <h1>Welcome to YELP CAMP!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a></p>
    </div>
</header>
 <nav class="navbar navbar-default">
     <div class="container-fluid">
         <div class="navbar-header">
             <a class="navbar-brand" href="/"></a>
         </div>
     </div>
 </nav>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campground.forEach(function(camp){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= camp.image %>"></img>
                <div class="caption">
                <h4><%= camp.name %></h4>
                <p>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
            </div>
            
        </div>
        <% }) %>
    </div>
    
</div>
<% include ../partials/footer %>