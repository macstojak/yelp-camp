<% include ../partials/header %>
<div class="container">
<div class="jumbotron">
    <div class="container">
        <h1>Welcome to YELP CAMP!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
    </div>
</div>
<div class="container">
    <div class="row text-center">
        <% campground.forEach(function(camp){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <% if(camp.image.indexOf("https")===-1){%>
                    <img src="/images/<%= camp.image %>"></img>
                <%}else{%>
                    <img src="<%= camp.image %>"></img>
                <%}%>
                
                <div class="caption">
                <h4><%= camp.name %></h4>
                <p>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
            </div>
            
        </div>
        <% }) %>
    </div>
</div>  
</div>
<% include ../partials/footer %>